@page
@model TGharker.Identity.Web.Pages.Account.LogoutModel
@{
    ViewData["Title"] = "Signed Out";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <div class="card shadow">
            <div class="card-body p-4 text-center">
                <h2 class="card-title mb-4">Signed Out</h2>
                <p class="text-muted">You have been successfully signed out.</p>
                <div class="mt-4">
                    <a asp-page="/Account/Login" class="btn btn-primary">Sign In Again</a>
                </div>
            </div>
        </div>
    </div>
</div>
