@page
@model TGharker.Identity.Web.Pages.Admin.LoginModel
@{
    ViewData["Title"] = "SuperAdmin Login";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en" data-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SuperAdmin Login - Harker Identity</title>
    <link rel="icon" type="image/svg+xml" href="~/images/harker-logo.svg" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/theme.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="d-flex align-items-center" style="min-height: 100vh;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-5 col-lg-4">
                <div class="card shadow-lg border-danger">
                    <div class="card-header bg-danger text-white text-center py-4">
                        <h4 class="mb-0">
                            <i class="bi bi-shield-lock me-2"></i>SuperAdmin Access
                        </h4>
                    </div>
                    <div class="card-body p-4">
                        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                        {
                            <div class="alert alert-danger" role="alert">
                                @Model.ErrorMessage
                            </div>
                        }

                        <form method="post">
                            <div class="mb-3">
                                <label asp-for="Username" class="form-label">Username</label>
                                <input asp-for="Username" class="form-control" autocomplete="username" required />
                            </div>
                            <div class="mb-4">
                                <label asp-for="Password" class="form-label">Password</label>
                                <input asp-for="Password" type="password" class="form-control" autocomplete="current-password" required />
                            </div>
                            <button type="submit" class="btn btn-danger w-100">
                                <i class="bi bi-box-arrow-in-right me-2"></i>Sign In
                            </button>
                        </form>
                    </div>
                    <div class="card-footer text-center text-muted py-3">
                        <small>Restricted Access Only</small>
                    </div>
                </div>
                <div class="text-center mt-4">
                    <a href="/" class="text-muted">
                        <i class="bi bi-arrow-left me-1"></i>Back to main site
                    </a>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
