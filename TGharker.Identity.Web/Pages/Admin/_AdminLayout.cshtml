@using TGharker.Identity.Web.Endpoints
@{
    var theme = ThemeEndpoint.GetCurrentTheme(Context);
}
<!DOCTYPE html>
<html lang="en" data-theme="@theme">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SuperAdmin</title>
    <link rel="icon" type="image/svg+xml" href="~/images/harker-logo.svg" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/theme.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TGharker.Identity.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="dashboard-wrapper">
        <!-- Sidebar -->
        <nav id="sidebar" class="sidebar">
            <div class="sidebar-header">
                <h4 class="mb-0 d-flex align-items-center">
                    <img src="~/images/harker-logo.svg" alt="Harker" height="32" class="me-2" />
                    <span class="text-danger">SuperAdmin</span>
                </h4>
            </div>

            <hr class="mx-3 my-2">

            <!-- Navigation -->
            <ul class="nav flex-column sidebar-nav">
                <li class="nav-item">
                    <a class="nav-link @(ViewData["ActivePage"]?.ToString() == "Dashboard" ? "active" : "")" asp-page="/Admin/Index">
                        <i class="bi bi-speedometer2 me-2"></i>
                        Dashboard
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewData["ActivePage"]?.ToString() == "Grains" ? "active" : "")" asp-page="/Admin/Grains">
                        <i class="bi bi-database me-2"></i>
                        Grains Browser
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewData["ActivePage"]?.ToString() == "Resync" ? "active" : "")" asp-page="/Admin/Resync">
                        <i class="bi bi-arrow-repeat me-2"></i>
                        Resync Search
                    </a>
                </li>
            </ul>

            <!-- Theme toggle and logout at bottom -->
            <div class="sidebar-footer mt-auto">
                <hr class="mx-3 my-2">
                <div class="theme-toggle" onclick="toggleTheme()">
                    <span><i class="bi bi-moon-stars me-2"></i>Dark Mode</span>
                    <div class="theme-toggle-switch"></div>
                </div>
                <div class="px-3 py-2">
                    <a class="btn btn-outline-danger w-100" asp-page="/Admin/Logout">
                        <i class="bi bi-box-arrow-right me-2"></i>Sign Out
                    </a>
                </div>
            </div>
        </nav>

        <!-- Main content -->
        <div class="main-content">
            <!-- Top navbar for mobile -->
            <nav class="navbar navbar-light bg-white border-bottom d-lg-none">
                <div class="container-fluid">
                    <button class="btn btn-link" type="button" data-bs-toggle="collapse" data-bs-target="#sidebar">
                        <i class="bi bi-list fs-4"></i>
                    </button>
                    <span class="navbar-brand mb-0 text-danger">SuperAdmin</span>
                    <div></div>
                </div>
            </nav>

            <!-- Page content -->
            <main class="content-area p-4">
                @if (ViewData["Title"] != null)
                {
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h1 class="h3 mb-0">@ViewData["Title"]</h1>
                        @RenderSection("PageActions", required: false)
                    </div>
                }
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        async function toggleTheme() {
            const html = document.documentElement;
            const currentTheme = html.getAttribute('data-theme');
            const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
            html.setAttribute('data-theme', newTheme);
            await fetch('/api/theme', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ theme: newTheme })
            });
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
