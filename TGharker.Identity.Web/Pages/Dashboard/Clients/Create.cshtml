@page
@model TGharker.Identity.Web.Pages.Dashboard.Clients.CreateModel
@{
    ViewData["Title"] = "Create Application";
}

<nav aria-label="breadcrumb" class="mb-3">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-page="./Index">Applications</a></li>
        <li class="breadcrumb-item active">Create</li>
    </ol>
</nav>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @Model.ErrorMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row">
    <div class="col-lg-8">
        <div class="card dashboard-card">
            <div class="card-header">
                <h5 class="card-title mb-0">Create New Application</h5>
            </div>
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="Input.ClientName" class="form-label">Application Name <span class="text-danger">*</span></label>
                            <input asp-for="Input.ClientName" class="form-control" placeholder="My Application" id="clientName" />
                            <span asp-validation-for="Input.ClientName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Input.ClientId" class="form-label">Client ID <span class="text-danger">*</span></label>
                            <input asp-for="Input.ClientId" class="form-control" placeholder="my-app" id="clientId" />
                            <div class="form-text">Unique identifier (lowercase, hyphens allowed)</div>
                            <span asp-validation-for="Input.ClientId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Description" class="form-label">Description</label>
                        <textarea asp-for="Input.Description" class="form-control" rows="2" placeholder="Brief description of your application"></textarea>
                        <span asp-validation-for="Input.Description" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Application Type <span class="text-danger">*</span></label>
                        <div class="row g-3">
                            <div class="col-md-4">
                                <input type="radio" class="btn-check" asp-for="Input.ApplicationType" id="typeSpa" value="spa">
                                <label class="btn btn-outline-secondary w-100 text-start p-3" for="typeSpa">
                                    <i class="bi bi-window d-block fs-4 mb-1"></i>
                                    <strong>Single Page App</strong>
                                    <small class="d-block text-muted">React, Angular, Vue</small>
                                </label>
                            </div>
                            <div class="col-md-4">
                                <input type="radio" class="btn-check" asp-for="Input.ApplicationType" id="typeServer" value="server">
                                <label class="btn btn-outline-secondary w-100 text-start p-3" for="typeServer">
                                    <i class="bi bi-server d-block fs-4 mb-1"></i>
                                    <strong>Server Application</strong>
                                    <small class="d-block text-muted">Backend, API, CLI</small>
                                </label>
                            </div>
                            <div class="col-md-4">
                                <input type="radio" class="btn-check" asp-for="Input.ApplicationType" id="typeNative" value="native">
                                <label class="btn btn-outline-secondary w-100 text-start p-3" for="typeNative">
                                    <i class="bi bi-phone d-block fs-4 mb-1"></i>
                                    <strong>Native / Mobile</strong>
                                    <small class="d-block text-muted">iOS, Android, Desktop</small>
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Input.RedirectUri" class="form-label">Redirect URI</label>
                        <input asp-for="Input.RedirectUri" class="form-control" placeholder="https://myapp.com/callback" />
                        <div class="form-text">Where users will be redirected after login. You can add more later.</div>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-lg me-1"></i> Create Application
                        </button>
                        <a asp-page="./Index" class="btn btn-outline-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card dashboard-card">
            <div class="card-header">
                <h5 class="card-title mb-0"><i class="bi bi-info-circle me-2"></i>Application Types</h5>
            </div>
            <div class="card-body">
                <h6 class="small">Single Page App</h6>
                <p class="small text-muted">
                    For browser-based JavaScript apps. Uses PKCE for secure authentication without a client secret.
                </p>

                <h6 class="small">Server Application</h6>
                <p class="small text-muted">
                    For backend services that can securely store credentials. Receives a client secret.
                </p>

                <h6 class="small">Native / Mobile</h6>
                <p class="small text-muted mb-0">
                    For mobile or desktop apps. Uses PKCE and supports refresh tokens.
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Auto-generate client ID from name
        document.getElementById('clientName')?.addEventListener('input', function() {
            var clientIdField = document.getElementById('clientId');
            if (clientIdField && !clientIdField.dataset.userModified) {
                var clientId = this.value
                    .toLowerCase()
                    .replace(/[^a-z0-9\s-]/g, '')
                    .replace(/\s+/g, '-')
                    .replace(/-+/g, '-')
                    .replace(/^-|-$/g, '');
                clientIdField.value = clientId;
            }
        });

        document.getElementById('clientId')?.addEventListener('input', function() {
            this.dataset.userModified = 'true';
        });
    </script>
}
