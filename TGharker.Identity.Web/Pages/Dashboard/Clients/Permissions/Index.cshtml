@page "/Dashboard/Clients/{clientId}/Permissions"
@using TGHarker.Identity.Abstractions.Models
@model TGharker.Identity.Web.Pages.Dashboard.Clients.Permissions.IndexModel
@{
    ViewData["Title"] = "Application Permissions";
}

<nav aria-label="breadcrumb" class="mb-3">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-page="../Index">Applications</a></li>
        <li class="breadcrumb-item"><a asp-page="../Details" asp-route-id="@Model.ClientId">@Model.ClientName</a></li>
        <li class="breadcrumb-item active">Permissions</li>
    </ol>
</nav>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-1">Application Permissions</h2>
        <p class="text-muted mb-0">Define permissions that can be assigned to roles for this application.</p>
    </div>
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addPermissionModal">
        <i class="bi bi-plus-lg me-1"></i> Add Permission
    </button>
</div>

<div class="card dashboard-card">
    <div class="card-body p-0">
        @if (Model.Permissions.Count == 0)
        {
            <div class="empty-state">
                <i class="bi bi-shield-lock"></i>
                <h5>No permissions defined</h5>
                <p class="mb-0">Add permissions that can be assigned to application roles.</p>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-dashboard table-hover mb-0">
                    <thead>
                        <tr>
                            <th>Permission</th>
                            <th>Description</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var permission in Model.Permissions)
                        {
                            <tr>
                                <td>
                                    <div class="fw-semibold font-monospace">
                                        @permission.Name
                                        @if (permission.IsSystem)
                                        {
                                            <span class="badge bg-secondary ms-1">System</span>
                                        }
                                    </div>
                                    @if (!string.IsNullOrEmpty(permission.DisplayName))
                                    {
                                        <small class="text-muted">@permission.DisplayName</small>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(permission.Description))
                                    {
                                        <span class="text-muted">@permission.Description</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted fst-italic">No description</span>
                                    }
                                </td>
                                <td class="text-end">
                                    @if (!permission.IsSystem)
                                    {
                                        <form method="post" asp-page-handler="Delete" asp-route-clientId="@Model.ClientId" asp-route-name="@permission.Name" class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-outline-danger"
                                                    onclick="return confirm('Remove this permission? It will also be removed from any roles that use it.')">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="card-footer d-flex justify-content-between align-items-center">
                <small class="text-muted">Showing @Model.Permissions.Count of @Model.TotalCount permissions</small>
                @if (Model.TotalPages > 1)
                {
                    <nav>
                        <ul class="pagination pagination-sm mb-0">
                            <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                                <a class="page-link" asp-page="./Index" asp-route-clientId="@Model.ClientId" asp-route-pageNumber="@(Model.PageNumber - 1)">Previous</a>
                            </li>
                            @for (var i = 1; i <= Model.TotalPages; i++)
                            {
                                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                    <a class="page-link" asp-page="./Index" asp-route-clientId="@Model.ClientId" asp-route-pageNumber="@i">@i</a>
                                </li>
                            }
                            <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                                <a class="page-link" asp-page="./Index" asp-route-clientId="@Model.ClientId" asp-route-pageNumber="@(Model.PageNumber + 1)">Next</a>
                            </li>
                        </ul>
                    </nav>
                }
            </div>
        }
    </div>
</div>

<!-- Add Permission Modal -->
<div class="modal fade" id="addPermissionModal" tabindex="-1" aria-labelledby="addPermissionModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-page-handler="Add" asp-route-clientId="@Model.ClientId">
                <div class="modal-header">
                    <h5 class="modal-title" id="addPermissionModalLabel">Add Permission</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="permissionName" class="form-label">Permission Name <span class="text-danger">*</span></label>
                        <input type="text" class="form-control font-monospace" id="permissionName" name="Name" required
                               placeholder="e.g., project:read, admin:users" pattern="[a-z0-9:_-]+"
                               title="Use lowercase letters, numbers, colons, underscores, and hyphens only">
                        <div class="form-text">Use a consistent naming convention like <code>resource:action</code></div>
                    </div>
                    <div class="mb-3">
                        <label for="displayName" class="form-label">Display Name</label>
                        <input type="text" class="form-control" id="displayName" name="DisplayName"
                               placeholder="e.g., Read Projects">
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea class="form-control" id="description" name="Description" rows="2"
                                  placeholder="Describe what this permission allows"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Add Permission</button>
                </div>
            </form>
        </div>
    </div>
</div>
