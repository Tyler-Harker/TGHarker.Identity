@page "/Dashboard/Clients/{clientId}/Roles/{roleId}/Edit"
@using TGHarker.Identity.Abstractions.Models
@model TGharker.Identity.Web.Pages.Dashboard.Clients.Roles.EditModel
@{
    ViewData["Title"] = $"Edit {Model.Role?.DisplayName ?? Model.Role?.Name}";
}

<nav aria-label="breadcrumb" class="mb-3">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-page="../Index">Applications</a></li>
        <li class="breadcrumb-item"><a asp-page="../Details" asp-route-id="@Model.ClientId">@Model.ClientName</a></li>
        <li class="breadcrumb-item"><a asp-page="./Index" asp-route-clientId="@Model.ClientId">Roles</a></li>
        <li class="breadcrumb-item active">Edit</li>
    </ol>
</nav>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row">
    <div class="col-lg-8">
        <div class="card dashboard-card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">Edit Role</h5>
                @if (Model.Role?.IsSystem == true)
                {
                    <span class="badge bg-secondary">System Role</span>
                }
            </div>
            <div class="card-body">
                <form method="post" asp-route-clientId="@Model.ClientId" asp-route-roleId="@Model.RoleId">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="mb-3">
                        <label asp-for="Input.Name" class="form-label">Role Name <span class="text-danger">*</span></label>
                        <input asp-for="Input.Name" class="form-control" placeholder="e.g., admin, editor, viewer"
                               readonly="@(Model.Role?.IsSystem == true)" />
                        <span asp-validation-for="Input.Name" class="text-danger"></span>
                        @if (Model.Role?.IsSystem == true)
                        {
                            <div class="form-text text-warning">System role names cannot be changed.</div>
                        }
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.DisplayName" class="form-label">Display Name</label>
                        <input asp-for="Input.DisplayName" class="form-control" placeholder="e.g., Administrator" />
                        <span asp-validation-for="Input.DisplayName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Description" class="form-label">Description</label>
                        <textarea asp-for="Input.Description" class="form-control" rows="2" placeholder="Describe what this role allows users to do"></textarea>
                        <span asp-validation-for="Input.Description" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label class="form-label">Permissions</label>
                        @if (Model.AvailablePermissions.Count == 0)
                        {
                            <div class="alert alert-info mb-0">
                                <i class="bi bi-info-circle me-2"></i>
                                No permissions defined yet.
                                <a asp-page="../Permissions/Index" asp-route-clientId="@Model.ClientId">Add permissions</a> first.
                            </div>
                        }
                        else
                        {
                            <div class="border rounded p-3" style="max-height: 300px; overflow-y: auto;">
                                @foreach (var permission in Model.AvailablePermissions)
                                {
                                    var isChecked = Model.Input.SelectedPermissions.Contains(permission.Name);
                                    <div class="form-check mb-2">
                                        <input class="form-check-input" type="checkbox" name="Input.SelectedPermissions"
                                               value="@permission.Name" id="perm_@permission.Name.Replace(":", "_")"
                                               checked="@isChecked">
                                        <label class="form-check-label" for="perm_@permission.Name.Replace(":", "_")">
                                            <code>@permission.Name</code>
                                            @if (!string.IsNullOrEmpty(permission.DisplayName))
                                            {
                                                <span class="text-muted ms-2">- @permission.DisplayName</span>
                                            }
                                        </label>
                                        @if (!string.IsNullOrEmpty(permission.Description))
                                        {
                                            <div class="small text-muted ms-4">@permission.Description</div>
                                        }
                                    </div>
                                }
                            </div>
                        }
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                        <a asp-page="./Index" asp-route-clientId="@Model.ClientId" class="btn btn-outline-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card dashboard-card">
            <div class="card-header">
                <h6 class="card-title mb-0"><i class="bi bi-info-circle me-2"></i>Role Details</h6>
            </div>
            <div class="card-body">
                <dl class="small mb-0">
                    <dt class="text-muted">Role ID</dt>
                    <dd class="font-monospace">@Model.RoleId</dd>

                    <dt class="text-muted">Created</dt>
                    <dd>@Model.Role?.CreatedAt.ToString("MMMM d, yyyy")</dd>

                    @if (Model.Role?.IsSystem == true)
                    {
                        <dt class="text-muted">Type</dt>
                        <dd><span class="badge bg-secondary">System Role</span></dd>
                    }
                </dl>
            </div>
        </div>

        @if (Model.Role?.IsSystem != true)
        {
            <div class="card dashboard-card mt-3 border-danger">
                <div class="card-header text-danger">
                    <h6 class="card-title mb-0"><i class="bi bi-exclamation-triangle me-2"></i>Danger Zone</h6>
                </div>
                <div class="card-body">
                    <p class="small text-muted mb-2">
                        Deleting this role will remove it from all users who have it assigned.
                    </p>
                    <form method="post" asp-page="./Index" asp-page-handler="Delete"
                          asp-route-clientId="@Model.ClientId" asp-route-roleId="@Model.RoleId">
                        <button type="submit" class="btn btn-outline-danger btn-sm w-100"
                                onclick="return confirm('Delete this role? Users with this role will lose the associated permissions.')">
                            <i class="bi bi-trash me-1"></i> Delete Role
                        </button>
                    </form>
                </div>
            </div>
        }
    </div>
</div>
