@page "/Dashboard/Clients/{clientId}/Roles"
@using TGHarker.Identity.Abstractions.Models
@model TGharker.Identity.Web.Pages.Dashboard.Clients.Roles.IndexModel
@{
    ViewData["Title"] = "Application Roles";
}

<nav aria-label="breadcrumb" class="mb-3">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-page="../Index">Applications</a></li>
        <li class="breadcrumb-item"><a asp-page="../Details" asp-route-id="@Model.ClientId">@Model.ClientName</a></li>
        <li class="breadcrumb-item active">Roles</li>
    </ol>
</nav>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-1">Application Roles</h2>
        <p class="text-muted mb-0">Define roles that group permissions for this application.</p>
    </div>
    <a asp-page="./Create" asp-route-clientId="@Model.ClientId" class="btn btn-primary">
        <i class="bi bi-plus-lg me-1"></i> New Role
    </a>
</div>

<div class="card dashboard-card">
    <div class="card-body p-0">
        @if (Model.Roles.Count == 0)
        {
            <div class="empty-state">
                <i class="bi bi-person-badge"></i>
                <h5>No roles defined</h5>
                <p class="mb-0">Create roles to group permissions for this application.</p>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-dashboard table-hover mb-0">
                    <thead>
                        <tr>
                            <th>Role</th>
                            <th>Permissions</th>
                            <th>Created</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var role in Model.Roles)
                        {
                            <tr class="cursor-pointer" onclick="window.location='@Url.Page("./Edit", new { clientId = Model.ClientId, roleId = role.Id })'">
                                <td>
                                    <div class="fw-semibold">
                                        @(role.DisplayName ?? role.Name)
                                        @if (role.IsSystem)
                                        {
                                            <span class="badge bg-secondary ms-1">System</span>
                                        }
                                    </div>
                                    @if (!string.IsNullOrEmpty(role.Description))
                                    {
                                        <small class="text-muted">@role.Description</small>
                                    }
                                    <div class="small text-muted font-monospace">@role.Name</div>
                                </td>
                                <td>
                                    @if (role.Permissions.Count == 0)
                                    {
                                        <small class="text-muted fst-italic">No permissions</small>
                                    }
                                    else
                                    {
                                        @foreach (var perm in role.Permissions.Take(3))
                                        {
                                            <span class="badge bg-light text-dark me-1 mb-1">@perm</span>
                                        }
                                        @if (role.Permissions.Count > 3)
                                        {
                                            <span class="badge bg-light text-dark mb-1">+@(role.Permissions.Count - 3) more</span>
                                        }
                                    }
                                </td>
                                <td>
                                    <small class="text-muted">@role.CreatedAt.ToString("MMM d, yyyy")</small>
                                </td>
                                <td class="text-end" onclick="event.stopPropagation()">
                                    <a asp-page="./Edit" asp-route-clientId="@Model.ClientId" asp-route-roleId="@role.Id"
                                       class="btn btn-sm btn-outline-secondary me-1">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    @if (!role.IsSystem)
                                    {
                                        <form method="post" asp-page-handler="Delete" asp-route-clientId="@Model.ClientId" asp-route-roleId="@role.Id" class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-outline-danger"
                                                    onclick="return confirm('Delete this role? Users with this role will lose the associated permissions.')">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="card-footer d-flex justify-content-between align-items-center">
                <small class="text-muted">Showing @Model.Roles.Count of @Model.TotalCount roles</small>
                @if (Model.TotalPages > 1)
                {
                    <nav>
                        <ul class="pagination pagination-sm mb-0">
                            <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                                <a class="page-link" asp-page="./Index" asp-route-clientId="@Model.ClientId" asp-route-pageNumber="@(Model.PageNumber - 1)">Previous</a>
                            </li>
                            @for (var i = 1; i <= Model.TotalPages; i++)
                            {
                                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                    <a class="page-link" asp-page="./Index" asp-route-clientId="@Model.ClientId" asp-route-pageNumber="@i">@i</a>
                                </li>
                            }
                            <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                                <a class="page-link" asp-page="./Index" asp-route-clientId="@Model.ClientId" asp-route-pageNumber="@(Model.PageNumber + 1)">Next</a>
                            </li>
                        </ul>
                    </nav>
                }
            </div>
        }
    </div>
</div>
