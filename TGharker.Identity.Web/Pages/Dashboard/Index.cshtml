@page
@model TGharker.Identity.Web.Pages.Dashboard.IndexModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="row g-4 mb-4">
    <!-- Welcome Card -->
    <div class="col-12">
        <div class="card dashboard-card">
            <div class="card-body">
                <h5 class="card-title">Welcome to @Model.TenantName</h5>
                <p class="card-text text-muted mb-0">
                    Manage your organization's identity and access settings from this dashboard.
                </p>
            </div>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="col-md-6 col-lg-4">
        <div class="card dashboard-card stat-card">
            <div class="d-flex align-items-center">
                <div class="stat-icon bg-primary-subtle text-primary me-3">
                    <i class="bi bi-people"></i>
                </div>
                <div>
                    <div class="stat-value">@Model.UserCount</div>
                    <div class="stat-label">Team Members</div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6 col-lg-4">
        <div class="card dashboard-card stat-card">
            <div class="d-flex align-items-center">
                <div class="stat-icon bg-success-subtle text-success me-3">
                    <i class="bi bi-shield-check"></i>
                </div>
                <div>
                    <div class="stat-value">Active</div>
                    <div class="stat-label">Organization Status</div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6 col-lg-4">
        <div class="card dashboard-card stat-card">
            <div class="d-flex align-items-center">
                <div class="stat-icon bg-info-subtle text-info me-3">
                    <i class="bi bi-link-45deg"></i>
                </div>
                <div>
                    <div class="stat-value text-truncate" style="font-size: 1rem;">@Model.TenantIdentifier</div>
                    <div class="stat-label">Identifier</div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row g-4">
    <!-- Quick Actions -->
    <div class="col-lg-6">
        <div class="card dashboard-card h-100">
            <div class="card-header bg-transparent">
                <h6 class="mb-0">Quick Actions</h6>
            </div>
            <div class="card-body">
                <div class="list-group list-group-flush">
                    <a asp-page="/Dashboard/Users/Index" class="list-group-item list-group-item-action d-flex align-items-center">
                        <i class="bi bi-person-plus me-3 text-primary"></i>
                        <div>
                            <div class="fw-semibold">Invite Users</div>
                            <small class="text-muted">Add new members to your organization</small>
                        </div>
                        <i class="bi bi-chevron-right ms-auto text-muted"></i>
                    </a>
                    <a asp-page="/Dashboard/Clients/Index" class="list-group-item list-group-item-action d-flex align-items-center">
                        <i class="bi bi-plus-square me-3 text-success"></i>
                        <div>
                            <div class="fw-semibold">Register Application</div>
                            <small class="text-muted">Add a new OAuth client application</small>
                        </div>
                        <i class="bi bi-chevron-right ms-auto text-muted"></i>
                    </a>
                    <a asp-page="/Dashboard/Settings/Index" class="list-group-item list-group-item-action d-flex align-items-center">
                        <i class="bi bi-gear me-3 text-secondary"></i>
                        <div>
                            <div class="fw-semibold">Organization Settings</div>
                            <small class="text-muted">Configure your organization preferences</small>
                        </div>
                        <i class="bi bi-chevron-right ms-auto text-muted"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity -->
    <div class="col-lg-6">
        <div class="card dashboard-card h-100">
            <div class="card-header bg-transparent">
                <h6 class="mb-0">Recent Activity</h6>
            </div>
            <div class="card-body">
                @if (Model.RecentActivity.Count == 0)
                {
                    <div class="empty-state">
                        <i class="bi bi-clock-history"></i>
                        <h5>No recent activity</h5>
                        <p>Activity will appear here as you use the system.</p>
                    </div>
                }
                else
                {
                    <div class="activity-list">
                        @foreach (var activity in Model.RecentActivity)
                        {
                            <div class="activity-item d-flex align-items-start">
                                <div class="activity-icon @activity.IconColor me-3">
                                    <i class="bi @activity.Icon"></i>
                                </div>
                                <div class="flex-grow-1">
                                    <div>@activity.Description</div>
                                    <small class="text-muted">@activity.Timestamp.ToString("MMM d, yyyy h:mm tt")</small>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>
