@page "{orgId}"
@using TGHarker.Identity.Abstractions.Models
@model TGharker.Identity.Web.Pages.Dashboard.Organizations.Members.InviteModel
@{
    ViewData["Title"] = "Invite Member";
}

<nav aria-label="breadcrumb" class="mb-3">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-page="../Index">Organizations</a></li>
        <li class="breadcrumb-item"><a asp-page="../Details" asp-route-id="@Model.OrganizationId">@Model.OrganizationName</a></li>
        <li class="breadcrumb-item active">Invite Member</li>
    </ol>
</nav>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @Model.ErrorMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (!string.IsNullOrEmpty(Model.InviteUrl))
{
    <div class="card dashboard-card mb-4">
        <div class="card-header bg-success text-white">
            <h5 class="card-title mb-0"><i class="bi bi-check-circle me-2"></i>Invitation Created</h5>
        </div>
        <div class="card-body">
            <p>Share this link with the invitee:</p>
            <div class="input-group mb-3">
                <input type="text" class="form-control" value="@Model.InviteUrl" id="inviteUrl" readonly />
                <button class="btn btn-outline-secondary" type="button" onclick="copyInviteUrl()">
                    <i class="bi bi-clipboard"></i> Copy
                </button>
            </div>
            <p class="text-muted small mb-0">
                <i class="bi bi-info-circle me-1"></i>
                This link expires in 7 days. The invitee will need to create an account or sign in to accept.
            </p>
        </div>
    </div>
}

<div class="row">
    <div class="col-lg-8">
        <div class="card dashboard-card">
            <div class="card-header">
                <h5 class="card-title mb-0">Invite New Member</h5>
            </div>
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="mb-3">
                        <label asp-for="Input.Email" class="form-label">Email Address <span class="text-danger">*</span></label>
                        <input asp-for="Input.Email" class="form-control" type="email" placeholder="user@example.com" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label class="form-label">Roles</label>
                        <div class="row g-2">
                            @foreach (var role in Model.AvailableRoles)
                            {
                                var isChecked = Model.Input.Roles.Contains(role.Id);
                                <div class="col-md-6">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox"
                                               name="Input.Roles" value="@role.Id" id="role-@role.Id"
                                               @(isChecked ? "checked" : "") />
                                        <label class="form-check-label" for="role-@role.Id">
                                            <strong>@role.Name</strong>
                                            @if (!string.IsNullOrEmpty(role.Description))
                                            {
                                                <small class="d-block text-muted">@role.Description</small>
                                            }
                                        </label>
                                    </div>
                                </div>
                            }
                        </div>
                        <div class="form-text mt-2">Select the roles for the new member. If none selected, they'll be assigned the Member role.</div>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-envelope me-1"></i> Create Invitation
                        </button>
                        <a asp-page="../Details" asp-route-id="@Model.OrganizationId" class="btn btn-outline-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card dashboard-card">
            <div class="card-header">
                <h5 class="card-title mb-0"><i class="bi bi-info-circle me-2"></i>About Invitations</h5>
            </div>
            <div class="card-body">
                <p class="small text-muted">
                    Organization invitations allow you to add users to your organization. The invitee will receive a link they can use to join.
                </p>
                <h6 class="small">Process</h6>
                <ol class="small text-muted ps-3 mb-0">
                    <li>Enter the user's email address</li>
                    <li>Select their initial roles</li>
                    <li>Share the generated link with them</li>
                    <li>They create an account or sign in</li>
                    <li>They're automatically added to the organization</li>
                </ol>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function copyInviteUrl() {
            var urlInput = document.getElementById('inviteUrl');
            urlInput.select();
            navigator.clipboard.writeText(urlInput.value).then(function() {
                // Show feedback
                var btn = event.target.closest('button');
                var originalHtml = btn.innerHTML;
                btn.innerHTML = '<i class="bi bi-check"></i> Copied!';
                btn.classList.remove('btn-outline-secondary');
                btn.classList.add('btn-success');
                setTimeout(function() {
                    btn.innerHTML = originalHtml;
                    btn.classList.remove('btn-success');
                    btn.classList.add('btn-outline-secondary');
                }, 2000);
            });
        }
    </script>
}
