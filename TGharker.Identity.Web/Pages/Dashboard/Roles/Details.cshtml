@page "{id}"
@using TGHarker.Identity.Abstractions.Models
@model TGharker.Identity.Web.Pages.Dashboard.Roles.DetailsModel
@{
    ViewData["Title"] = Model.Role.Name;
    var groupedPermissions = Model.AvailablePermissions.GroupBy(p => p.Category).ToList();
}

<nav aria-label="breadcrumb" class="mb-3">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-page="./Index">Roles</a></li>
        <li class="breadcrumb-item active">@Model.Role.Name</li>
    </ol>
</nav>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="d-flex justify-content-between align-items-start mb-4">
    <div>
        <h2 class="mb-1">
            @Model.Role.Name
            @if (Model.Role.IsSystem)
            {
                <span class="badge bg-secondary ms-2">System</span>
            }
        </h2>
        @if (!string.IsNullOrEmpty(Model.Role.Description))
        {
            <p class="text-muted mb-0">@Model.Role.Description</p>
        }
    </div>
    <div class="d-flex gap-2">
        @if (!Model.Role.IsSystem)
        {
            <a asp-page="./Edit" asp-route-id="@Model.Role.Id" class="btn btn-outline-primary">
                <i class="bi bi-pencil me-1"></i> Edit
            </a>
            <form method="post" asp-page-handler="Delete" asp-route-id="@Model.Role.Id" class="d-inline">
                <button type="submit" class="btn btn-outline-danger"
                        onclick="return confirm('Are you sure you want to delete this role?')">
                    <i class="bi bi-trash me-1"></i> Delete
                </button>
            </form>
        }
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <!-- Permissions -->
        <div class="card dashboard-card mb-4">
            <div class="card-header">
                <h5 class="card-title mb-0">Permissions (@Model.Role.Permissions.Count)</h5>
            </div>
            <div class="card-body">
                @if (Model.Role.Permissions.Count == 0)
                {
                    <p class="text-muted mb-0">This role has no permissions assigned.</p>
                }
                else
                {
                    @foreach (var group in groupedPermissions)
                    {
                        var groupPerms = group.Where(p => Model.Role.Permissions.Contains(p.Permission)).ToList();
                        if (groupPerms.Any())
                        {
                            <div class="mb-3">
                                <h6 class="text-muted text-uppercase small fw-bold mb-2">@group.Key</h6>
                                <div class="d-flex flex-wrap gap-2">
                                    @foreach (var perm in groupPerms)
                                    {
                                        <span class="badge bg-light text-dark border">
                                            <i class="bi bi-check-circle text-success me-1"></i>
                                            @perm.Description
                                        </span>
                                    }
                                </div>
                            </div>
                        }
                    }
                }
            </div>
        </div>

        <!-- Members -->
        <div class="card dashboard-card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">Members (@Model.Members.Count)</h5>
                <a asp-page="/Dashboard/Users/Index" class="btn btn-sm btn-outline-primary">
                    Manage Users
                </a>
            </div>
            <div class="card-body p-0">
                @if (Model.Members.Count == 0)
                {
                    <div class="p-4 text-center text-muted">
                        <i class="bi bi-people fs-1 d-block mb-2"></i>
                        <p class="mb-0">No users are assigned to this role.</p>
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>User</th>
                                    <th class="text-end">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var member in Model.Members)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <i class="bi bi-person-circle fs-4 text-muted me-2"></i>
                                                <div>
                                                    <div class="fw-semibold">@(member.Name ?? member.Email)</div>
                                                    @if (!string.IsNullOrEmpty(member.Name))
                                                    {
                                                        <small class="text-muted">@member.Email</small>
                                                    }
                                                </div>
                                            </div>
                                        </td>
                                        <td class="text-end">
                                            <a asp-page="/Dashboard/Users/Index" class="btn btn-sm btn-outline-secondary">
                                                View
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <!-- Role Info -->
        <div class="card dashboard-card">
            <div class="card-header">
                <h5 class="card-title mb-0">Details</h5>
            </div>
            <div class="card-body">
                <dl class="mb-0">
                    <dt class="text-muted small">Role ID</dt>
                    <dd class="font-monospace small">@Model.Role.Id</dd>

                    <dt class="text-muted small">Type</dt>
                    <dd>
                        @if (Model.Role.IsSystem)
                        {
                            <span class="badge bg-secondary">System Role</span>
                        }
                        else
                        {
                            <span class="badge bg-info">Custom Role</span>
                        }
                    </dd>

                    <dt class="text-muted small">Created</dt>
                    <dd class="mb-0">@Model.Role.CreatedAt.ToString("MMMM d, yyyy")</dd>
                </dl>
            </div>
        </div>
    </div>
</div>
