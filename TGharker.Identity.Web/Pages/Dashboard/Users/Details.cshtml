@page "{id}"
@using TGHarker.Identity.Abstractions.Models
@model TGharker.Identity.Web.Pages.Dashboard.Users.DetailsModel
@{
    ViewData["Title"] = Model.UserInfo.DisplayName ?? Model.UserInfo.Email;
}

<nav aria-label="breadcrumb" class="mb-3">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-page="./Index">Users</a></li>
        <li class="breadcrumb-item active">@(Model.UserInfo.DisplayName ?? Model.UserInfo.Email)</li>
    </ol>
</nav>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="d-flex justify-content-between align-items-start mb-4">
    <div class="d-flex align-items-center">
        <div class="user-avatar-lg me-3">
            <i class="bi bi-person-circle" style="font-size: 3rem; color: var(--bs-secondary);"></i>
        </div>
        <div>
            <h2 class="mb-1">
                @(Model.UserInfo.DisplayName ?? Model.UserInfo.Email)
                @if (Model.IsCurrentUser)
                {
                    <span class="badge bg-secondary ms-2">You</span>
                }
            </h2>
            @if (!string.IsNullOrEmpty(Model.UserInfo.DisplayName))
            {
                <p class="text-muted mb-0">@Model.UserInfo.Email</p>
            }
        </div>
    </div>
    <div class="d-flex gap-2">
        @if (!Model.IsCurrentUser)
        {
            <a asp-page="./Edit" asp-route-id="@Model.UserInfo.UserId" class="btn btn-outline-primary">
                <i class="bi bi-pencil me-1"></i> Edit Roles
            </a>
            <form method="post" asp-page-handler="Remove" asp-route-id="@Model.UserInfo.UserId" class="d-inline">
                <button type="submit" class="btn btn-outline-danger"
                        onclick="return confirm('Are you sure you want to remove this user from the tenant?')">
                    <i class="bi bi-person-x me-1"></i> Remove
                </button>
            </form>
        }
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <!-- Roles -->
        <div class="card dashboard-card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">Roles</h5>
                @if (!Model.IsCurrentUser)
                {
                    <a asp-page="./Edit" asp-route-id="@Model.UserInfo.UserId" class="btn btn-sm btn-outline-primary">
                        Edit
                    </a>
                }
            </div>
            <div class="card-body">
                @if (Model.UserRoles.Count == 0)
                {
                    <p class="text-muted mb-0">No roles assigned.</p>
                }
                else
                {
                    <div class="list-group list-group-flush">
                        @foreach (var role in Model.UserRoles.OrderByDescending(r => r.Id == WellKnownRoles.TenantOwner).ThenByDescending(r => r.Id == WellKnownRoles.TenantAdmin))
                        {
                            var badgeClass = role.Id == WellKnownRoles.TenantOwner ? "bg-warning text-dark" :
                                             role.Id == WellKnownRoles.TenantAdmin ? "bg-primary" :
                                             role.IsSystem ? "bg-secondary" : "bg-info";
                            <div class="list-group-item px-0">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <h6 class="mb-1">
                                            @if (role.Id == WellKnownRoles.TenantOwner)
                                            {
                                                <i class="bi bi-star text-warning me-1"></i>
                                            }
                                            else if (role.Id == WellKnownRoles.TenantAdmin)
                                            {
                                                <i class="bi bi-shield text-primary me-1"></i>
                                            }
                                            @role.Name
                                            @if (role.IsSystem)
                                            {
                                                <span class="badge bg-secondary ms-1">System</span>
                                            }
                                        </h6>
                                        @if (!string.IsNullOrEmpty(role.Description))
                                        {
                                            <small class="text-muted">@role.Description</small>
                                        }
                                    </div>
                                    <span class="badge @badgeClass">@role.Permissions.Count permissions</span>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>

        <!-- Permissions Summary -->
        <div class="card dashboard-card">
            <div class="card-header">
                <h5 class="card-title mb-0">Effective Permissions</h5>
            </div>
            <div class="card-body">
                @{
                    var allPermissions = Model.UserRoles
                        .SelectMany(r => r.Permissions)
                        .Distinct()
                        .OrderBy(p => p)
                        .ToList();

                    var groupedPermissions = allPermissions
                        .GroupBy(p => p.Split(':').First())
                        .OrderBy(g => g.Key);
                }

                @if (!allPermissions.Any())
                {
                    <p class="text-muted mb-0">No permissions.</p>
                }
                else
                {
                    <div class="row">
                        @foreach (var group in groupedPermissions)
                        {
                            <div class="col-md-6 mb-3">
                                <h6 class="text-muted small text-uppercase">@group.Key</h6>
                                @foreach (var perm in group)
                                {
                                    <span class="badge bg-light text-dark me-1 mb-1">@perm.Split(':').Last()</span>
                                }
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <!-- User Info -->
        <div class="card dashboard-card">
            <div class="card-header">
                <h5 class="card-title mb-0">Details</h5>
            </div>
            <div class="card-body">
                <dl class="mb-0">
                    <dt class="text-muted small">Status</dt>
                    <dd>
                        @if (Model.UserInfo.IsActive)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Inactive</span>
                        }
                    </dd>

                    <dt class="text-muted small">Member Since</dt>
                    <dd>@Model.UserInfo.JoinedAt.ToString("MMMM d, yyyy")</dd>

                    <dt class="text-muted small">User ID</dt>
                    <dd class="mb-0"><code class="small">@Model.UserInfo.UserId</code></dd>
                </dl>
            </div>
        </div>
    </div>
</div>
