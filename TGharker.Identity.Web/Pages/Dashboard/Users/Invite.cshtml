@page
@using TGHarker.Identity.Abstractions.Models
@model TGharker.Identity.Web.Pages.Dashboard.Users.InviteModel
@{
    ViewData["Title"] = "Add User";
}

<nav aria-label="breadcrumb" class="mb-3">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-page="./Index">Users</a></li>
        <li class="breadcrumb-item active">Add User</li>
    </ol>
</nav>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @Model.ErrorMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (Model.ShowInviteLink && !string.IsNullOrEmpty(Model.InviteUrl))
{
    <div class="alert alert-success" role="alert">
        <h5 class="alert-heading"><i class="bi bi-envelope-check me-2"></i>Invitation Created</h5>
        <p>An invitation has been created for <strong>@Model.Input.Email</strong>. Share the link below with them to join this tenant.</p>
        <hr />
        <div class="input-group">
            <input type="text" class="form-control" id="inviteUrl" value="@Model.InviteUrl" readonly />
            <button class="btn btn-outline-secondary" type="button" onclick="copyInviteUrl()">
                <i class="bi bi-clipboard me-1"></i> Copy
            </button>
        </div>
        <div class="form-text mt-2">
            <i class="bi bi-clock me-1"></i> This invitation expires in 7 days.
        </div>
    </div>
}

<div class="row">
    <div class="col-lg-6">
        <div class="card dashboard-card">
            <div class="card-header">
                <h5 class="card-title mb-0">Add User to Tenant</h5>
            </div>
            <div class="card-body">
                <p class="text-muted">Enter the email address to add a user to this tenant. If they're not registered, an invitation link will be generated.</p>

                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="mb-3">
                        <label asp-for="Input.Email" class="form-label">Email Address <span class="text-danger">*</span></label>
                        <input asp-for="Input.Email" class="form-control" placeholder="user@example.com" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                        <div class="form-text">Existing users will be added directly. New users will receive an invite link.</div>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Input.Role" class="form-label">Role</label>
                        <select asp-for="Input.Role" class="form-select">
                            @foreach (var role in Model.AvailableRoles.OrderByDescending(r => r.Id == WellKnownRoles.TenantOwner).ThenByDescending(r => r.Id == WellKnownRoles.TenantAdmin).ThenBy(r => r.Name))
                            {
                                <option value="@role.Id" selected="@(role.Id == WellKnownRoles.User)">@role.Name</option>
                            }
                        </select>
                        <div class="form-text">The role determines what permissions the user will have.</div>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-person-plus me-1"></i> Add User
                        </button>
                        <a asp-page="./Index" class="btn btn-outline-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-6">
        <div class="card dashboard-card">
            <div class="card-header">
                <h5 class="card-title mb-0"><i class="bi bi-info-circle me-2"></i>About Roles</h5>
            </div>
            <div class="card-body">
                @foreach (var role in Model.AvailableRoles.Where(r => r.IsSystem).OrderByDescending(r => r.Id == WellKnownRoles.TenantOwner).ThenByDescending(r => r.Id == WellKnownRoles.TenantAdmin))
                {
                    <h6 class="small">
                        @if (role.Id == WellKnownRoles.TenantOwner)
                        {
                            <i class="bi bi-star text-warning me-1"></i>
                        }
                        else if (role.Id == WellKnownRoles.TenantAdmin)
                        {
                            <i class="bi bi-shield text-primary me-1"></i>
                        }
                        else
                        {
                            <i class="bi bi-person text-secondary me-1"></i>
                        }
                        @role.Name
                    </h6>
                    <p class="small text-muted @(role != Model.AvailableRoles.Where(r => r.IsSystem).Last() ? "" : "mb-0")">
                        @(role.Description ?? $"{role.Permissions.Count} permissions")
                    </p>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function copyInviteUrl() {
            const urlInput = document.getElementById('inviteUrl');
            urlInput.select();
            urlInput.setSelectionRange(0, 99999);
            navigator.clipboard.writeText(urlInput.value).then(function() {
                const btn = event.target.closest('button');
                const originalHtml = btn.innerHTML;
                btn.innerHTML = '<i class="bi bi-check me-1"></i> Copied!';
                btn.classList.remove('btn-outline-secondary');
                btn.classList.add('btn-success');
                setTimeout(function() {
                    btn.innerHTML = originalHtml;
                    btn.classList.remove('btn-success');
                    btn.classList.add('btn-outline-secondary');
                }, 2000);
            });
        }
    </script>
}
