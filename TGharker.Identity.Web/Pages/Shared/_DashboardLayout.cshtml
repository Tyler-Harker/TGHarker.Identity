@using System.Security.Claims
@inject IClusterClient ClusterClient
@{
    var userId = User.FindFirst(ClaimTypes.NameIdentifier)?.Value ?? User.FindFirst("sub")?.Value;
    var currentTenantId = User.FindFirst("tenant_id")?.Value;
    var currentTenantIdentifier = User.FindFirst("tenant_identifier")?.Value;
    var userEmail = User.FindFirst(ClaimTypes.Email)?.Value;
    var userName = User.FindFirst(ClaimTypes.GivenName)?.Value ?? userEmail?.Split('@')[0];

    var tenants = new List<(string Id, string Name, string Identifier)>();
    if (!string.IsNullOrEmpty(userId))
    {
        var userGrain = ClusterClient.GetGrain<TGHarker.Identity.Abstractions.Grains.IUserGrain>($"user-{userId}");
        var memberships = await userGrain.GetTenantMembershipsAsync();
        foreach (var tenantId in memberships)
        {
            var tenantGrain = ClusterClient.GetGrain<TGHarker.Identity.Abstractions.Grains.ITenantGrain>(tenantId);
            var tenant = await tenantGrain.GetStateAsync();
            if (tenant != null && tenant.IsActive)
            {
                tenants.Add((tenant.Id, tenant.DisplayName ?? tenant.Name, tenant.Identifier));
            }
        }
    }
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TGHarker Identity</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TGharker.Identity.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="dashboard-wrapper">
        <!-- Sidebar -->
        <nav id="sidebar" class="sidebar">
            <div class="sidebar-header">
                <h4 class="mb-0">TGHarker Identity</h4>
            </div>

            <!-- Tenant Switcher -->
            <div class="tenant-switcher px-3 py-2">
                <label class="form-label text-muted small mb-1">Tenant</label>
                <div class="dropdown">
                    <button class="btn btn-outline-secondary dropdown-toggle w-100 text-start d-flex align-items-center justify-content-between"
                            type="button"
                            id="tenantDropdown"
                            data-bs-toggle="dropdown"
                            aria-expanded="false">
                        <span class="tenant-name text-truncate">
                            @(tenants.FirstOrDefault(t => t.Id == currentTenantId).Name ?? "Select Organization")
                        </span>
                    </button>
                    <ul class="dropdown-menu w-100" aria-labelledby="tenantDropdown">
                        @foreach (var tenant in tenants)
                        {
                            var isActive = tenant.Id == currentTenantId;
                            <li>
                                <a class="dropdown-item d-flex align-items-center @(isActive ? "active" : "")"
                                   href="/Dashboard/SwitchTenant?tenantId=@tenant.Id&returnUrl=@Context.Request.Path">
                                    <span class="flex-grow-1">@tenant.Name</span>
                                    @if (isActive)
                                    {
                                        <i class="bi bi-check-lg ms-2"></i>
                                    }
                                </a>
                            </li>
                        }
                        @if (tenants.Count > 0)
                        {
                            <li><hr class="dropdown-divider"></li>
                        }
                        <li>
                            <a class="dropdown-item" href="/Tenants">
                                <i class="bi bi-plus-lg me-2"></i>Manage Tenants
                            </a>
                        </li>
                    </ul>
                </div>
            </div>

            <hr class="mx-3 my-2">

            <!-- Navigation -->
            <ul class="nav flex-column sidebar-nav">
                <li class="nav-item">
                    <a class="nav-link @(ViewData["ActivePage"]?.ToString() == "Dashboard" ? "active" : "")" asp-page="/Dashboard/Index">
                        <i class="bi bi-house-door me-2"></i>
                        Dashboard
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewData["ActivePage"]?.ToString() == "Users" ? "active" : "")" asp-page="/Dashboard/Users/Index">
                        <i class="bi bi-people me-2"></i>
                        Users
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewData["ActivePage"]?.ToString() == "Roles" ? "active" : "")" asp-page="/Dashboard/Roles/Index">
                        <i class="bi bi-shield-check me-2"></i>
                        Roles
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewData["ActivePage"]?.ToString() == "Clients" ? "active" : "")" asp-page="/Dashboard/Clients/Index">
                        <i class="bi bi-app-indicator me-2"></i>
                        Applications
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewData["ActivePage"]?.ToString() == "Settings" ? "active" : "")" asp-page="/Dashboard/Settings/Index">
                        <i class="bi bi-gear me-2"></i>
                        Settings
                    </a>
                </li>
            </ul>

            <!-- User section at bottom -->
            <div class="sidebar-footer mt-auto">
                <hr class="mx-3 my-2">
                <div class="dropdown px-3 py-2">
                    <a href="#" class="d-flex align-items-center text-decoration-none dropdown-toggle"
                       id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        <div class="user-avatar me-2">
                            <i class="bi bi-person-circle fs-4"></i>
                        </div>
                        <div class="user-info flex-grow-1 text-truncate">
                            <span class="d-block small fw-semibold text-truncate">@userName</span>
                            <span class="d-block small text-muted text-truncate">@userEmail</span>
                        </div>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="userDropdown">
                        <li>
                            <a class="dropdown-item" href="/Dashboard/Profile">
                                <i class="bi bi-person me-2"></i>Profile
                            </a>
                        </li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <a class="dropdown-item text-danger" asp-page="/Account/Logout">
                                <i class="bi bi-box-arrow-right me-2"></i>Sign Out
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <!-- Main content -->
        <div class="main-content">
            <!-- Top navbar for mobile -->
            <nav class="navbar navbar-light bg-white border-bottom d-lg-none">
                <div class="container-fluid">
                    <button class="btn btn-link" type="button" data-bs-toggle="collapse" data-bs-target="#sidebar">
                        <i class="bi bi-list fs-4"></i>
                    </button>
                    <span class="navbar-brand mb-0">@ViewData["Title"]</span>
                    <div></div>
                </div>
            </nav>

            <!-- Page content -->
            <main class="content-area p-4">
                @if (ViewData["Title"] != null)
                {
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h1 class="h3 mb-0">@ViewData["Title"]</h1>
                        @RenderSection("PageActions", required: false)
                    </div>
                }
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
