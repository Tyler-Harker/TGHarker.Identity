@using TGharker.Identity.Web.Endpoints
@{
    var currentPage = ViewContext.RouteData.Values["page"]?.ToString() ?? "";
    var theme = ThemeEndpoint.GetCurrentTheme(Context);
}
<!DOCTYPE html>
<html lang="en" data-theme="@theme">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Harker Docs</title>
    <link rel="icon" type="image/svg+xml" href="~/images/harker-logo.svg" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/theme.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/docs.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TGharker.Identity.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <!-- Top Navigation -->
    <nav class="navbar navbar-expand-lg fixed-top docs-navbar">
        <div class="container-fluid px-4">
            <a class="navbar-brand fw-bold d-flex align-items-center" href="/">
                <img src="~/images/harker-logo.svg" alt="Harker" height="49" class="me-2" /><span class="text-primary">Harker</span>
            </a>
            <div class="d-flex align-items-center gap-3">
                <a href="/" class="btn btn-sm btn-outline-secondary">
                    <i class="bi bi-arrow-left me-1"></i>Back to Home
                </a>
                <a asp-page="/Account/Login" class="btn btn-sm btn-outline-primary">Sign In</a>
            </div>
        </div>
    </nav>

    <div class="docs-container">
        <!-- Sidebar -->
        <aside class="docs-sidebar">
            <nav class="docs-nav">
                <div class="docs-nav-section">
                    <h6 class="docs-nav-title">Getting Started</h6>
                    <ul class="docs-nav-list">
                        <li>
                            <a href="/Docs" class="docs-nav-link @(currentPage == "/Docs/Index" ? "active" : "")">
                                <i class="bi bi-house me-2"></i>Overview
                            </a>
                        </li>
                        <li>
                            <a href="/Docs/GettingStarted" class="docs-nav-link @(currentPage == "/Docs/GettingStarted" ? "active" : "")">
                                <i class="bi bi-rocket-takeoff me-2"></i>Quick Start
                            </a>
                        </li>
                    </ul>
                </div>

                <div class="docs-nav-section">
                    <h6 class="docs-nav-title">Authentication</h6>
                    <ul class="docs-nav-list">
                        <li>
                            <a href="/Docs/Authentication" class="docs-nav-link @(currentPage == "/Docs/Authentication" ? "active" : "")">
                                <i class="bi bi-key me-2"></i>Auth Flows
                            </a>
                        </li>
                        <li>
                            <a href="/Docs/Tokens" class="docs-nav-link @(currentPage == "/Docs/Tokens" ? "active" : "")">
                                <i class="bi bi-ticket-perforated me-2"></i>Tokens & Scopes
                            </a>
                        </li>
                    </ul>
                </div>

                <div class="docs-nav-section">
                    <h6 class="docs-nav-title">API Reference</h6>
                    <ul class="docs-nav-list">
                        <li>
                            <a href="/Docs/ApiReference" class="docs-nav-link @(currentPage == "/Docs/ApiReference" ? "active" : "")">
                                <i class="bi bi-braces me-2"></i>Endpoints
                            </a>
                        </li>
                        <li>
                            <a href="/swagger" class="docs-nav-link" target="_blank">
                                <i class="bi bi-box-arrow-up-right me-2"></i>Swagger UI
                            </a>
                        </li>
                    </ul>
                </div>

                <div class="docs-nav-section">
                    <h6 class="docs-nav-title">Resources</h6>
                    <ul class="docs-nav-list">
                        <li>
                            <a href="/Docs/Sdks" class="docs-nav-link @(currentPage == "/Docs/Sdks" ? "active" : "")">
                                <i class="bi bi-code-slash me-2"></i>SDKs & Libraries
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>
        </aside>

        <!-- Main Content -->
        <main class="docs-content">
            <div class="docs-content-inner">
                @RenderBody()
            </div>
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
