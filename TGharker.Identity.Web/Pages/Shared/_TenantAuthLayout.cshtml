@using TGharker.Identity.Web.Pages.Tenant
@using TGharker.Identity.Web.Endpoints
@{
    var pageModel = Model as TenantAuthPageModel;
    var branding = pageModel?.Branding;
    var tenant = pageModel?.Tenant;
    var theme = ThemeEndpoint.GetCurrentTheme(Context);

    var primaryColor = branding?.PrimaryColor ?? "#0d6efd";
    var backgroundColor = branding?.BackgroundColor ?? "#f8f9fa";
    var accentColor = branding?.AccentColor ?? primaryColor;
}
<!DOCTYPE html>
<html lang="en" data-theme="@theme">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @(tenant?.DisplayName ?? tenant?.Name ?? "Identity")</title>
    @if (!string.IsNullOrEmpty(branding?.FaviconUrl))
    {
        <link rel="icon" href="@branding.FaviconUrl" />
    }
    else
    {
        <link rel="icon" type="image/svg+xml" href="~/images/harker-logo.svg" />
    }
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/theme.css" asp-append-version="true" />
    <style>
        :root {
            --tenant-primary: @primaryColor;
            --tenant-background: @backgroundColor;
            --tenant-accent: @accentColor;
        }

        body.tenant-auth {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            background: var(--bg-secondary);
        }

        .tenant-auth-container {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem 1rem;
        }

        .tenant-auth-card {
            width: 100%;
            max-width: 420px;
            background: var(--card-bg);
            border-radius: 0.5rem;
            box-shadow: 0 0.5rem 1rem var(--shadow-color);
            border: 1px solid var(--border-color);
        }

        .tenant-auth-header {
            padding: 2rem 2rem 1rem;
            text-align: center;
            border-bottom: 1px solid var(--border-color);
        }

        .tenant-logo {
            max-height: 60px;
            max-width: 200px;
            margin-bottom: 1rem;
        }

        .tenant-auth-body {
            padding: 2rem;
        }

        .tenant-auth-footer {
            padding: 1rem 2rem 2rem;
            text-align: center;
            font-size: 0.875rem;
            color: var(--text-muted);
        }

        .tenant-auth-footer a {
            color: var(--tenant-primary);
        }

        .btn-tenant-primary {
            background-color: var(--tenant-primary);
            border-color: var(--tenant-primary);
            color: white;
        }

        .btn-tenant-primary:hover {
            background-color: var(--tenant-primary);
            border-color: var(--tenant-primary);
            filter: brightness(0.9);
            color: white;
        }

        .link-tenant {
            color: var(--tenant-primary);
        }

        .tenant-welcome {
            color: var(--text-muted);
            font-size: 0.9375rem;
            margin-bottom: 0;
        }

        @(branding?.CustomCss ?? "")
    </style>
</head>
<body class="tenant-auth">
    <div class="tenant-auth-container">
        <div class="tenant-auth-card">
            <div class="tenant-auth-header">
                @if (!string.IsNullOrEmpty(branding?.LogoUrl))
                {
                    <img src="@branding.LogoUrl" alt="@(tenant?.Name)" class="tenant-logo" />
                }
                else
                {
                    <h4 class="mb-0">@(tenant?.DisplayName ?? tenant?.Name ?? "Identity")</h4>
                }
                @if (!string.IsNullOrEmpty(branding?.WelcomeMessage))
                {
                    <p class="tenant-welcome mt-2">@branding.WelcomeMessage</p>
                }
            </div>

            <div class="tenant-auth-body">
                @RenderBody()
            </div>

            <div class="tenant-auth-footer">
                @if (!string.IsNullOrEmpty(branding?.PrivacyPolicyUrl) || !string.IsNullOrEmpty(branding?.TermsOfServiceUrl))
                {
                    <div class="mb-2">
                        @if (!string.IsNullOrEmpty(branding?.PrivacyPolicyUrl))
                        {
                            <a href="@branding.PrivacyPolicyUrl" target="_blank">Privacy Policy</a>
                        }
                        @if (!string.IsNullOrEmpty(branding?.PrivacyPolicyUrl) && !string.IsNullOrEmpty(branding?.TermsOfServiceUrl))
                        {
                            <span class="mx-2">|</span>
                        }
                        @if (!string.IsNullOrEmpty(branding?.TermsOfServiceUrl))
                        {
                            <a href="@branding.TermsOfServiceUrl" target="_blank">Terms of Service</a>
                        }
                    </div>
                }
                @if (!string.IsNullOrEmpty(branding?.SupportEmail))
                {
                    <div>Need help? <a href="mailto:@branding.SupportEmail">Contact Support</a></div>
                }
            </div>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
