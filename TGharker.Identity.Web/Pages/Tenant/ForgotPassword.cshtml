@page "/Tenant/{tenantId}/ForgotPassword"
@model TGharker.Identity.Web.Pages.Tenant.ForgotPasswordModel
@{
    ViewData["Title"] = "Reset Password";
}

@if (Model.EmailSent)
{
    <div class="text-center">
        <i class="bi bi-envelope-check text-success" style="font-size: 3rem;"></i>
        <h5 class="mt-3">Check your email</h5>
        <p class="text-muted">
            If an account exists with <strong>@Model.Input.Email</strong>,
            we've sent instructions to reset your password.
        </p>
        <hr class="my-4" />
        <a asp-page="/Tenant/Login" asp-route-tenantId="@Model.TenantId" class="btn btn-tenant-primary">
            Back to Sign In
        </a>
    </div>
}
else
{
    <p class="text-muted small mb-4">
        Enter your email address and we'll send you a link to reset your password.
    </p>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>@Model.ErrorMessage
        </div>
    }

    <form method="post">
        <input type="hidden" asp-for="TenantId" />

        <div class="mb-3">
            <label asp-for="Input.Email" class="form-label">Email address</label>
            <input asp-for="Input.Email" class="form-control" type="email" placeholder="name@example.com" autocomplete="email" autofocus />
            <span asp-validation-for="Input.Email" class="text-danger small"></span>
        </div>

        <div class="d-grid mb-3">
            <button type="submit" class="btn btn-tenant-primary btn-lg">Send Reset Link</button>
        </div>

        <div class="text-center">
            <a asp-page="/Tenant/Login" asp-route-tenantId="@Model.TenantId" class="link-tenant small">
                <i class="bi bi-arrow-left me-1"></i>Back to Sign In
            </a>
        </div>
    </form>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
