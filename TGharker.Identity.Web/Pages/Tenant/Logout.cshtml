@page "/tenant/{tenantId}/logout"
@model TGharker.Identity.Web.Pages.Tenant.LogoutModel
@{
    ViewData["Title"] = "Sign Out";
}

@if (Model.LoggedOut)
{
    <div class="text-center">
        <i class="bi bi-check-circle text-success" style="font-size: 3rem;"></i>
        <h5 class="mt-3">You've Been Signed Out</h5>
        <p class="text-muted">
            You have been successfully signed out of your account.
        </p>
        <hr class="my-4" />
        <a asp-page="/Tenant/Login" asp-route-tenantId="@Model.TenantId" class="btn btn-tenant-primary">
            Sign In Again
        </a>
    </div>
}
else
{
    <div class="text-center">
        <i class="bi bi-box-arrow-right text-muted" style="font-size: 3rem;"></i>
        <h5 class="mt-3">Sign Out</h5>
        <p class="text-muted mb-4">
            Are you sure you want to sign out?
        </p>

        <form method="post">
            <input type="hidden" asp-for="TenantId" />
            <input type="hidden" asp-for="ReturnUrl" />

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-tenant-primary btn-lg">
                    Yes, Sign Out
                </button>
                @if (!string.IsNullOrEmpty(Model.ReturnUrl))
                {
                    <a href="@Model.ReturnUrl" class="btn btn-outline-secondary">
                        Cancel
                    </a>
                }
            </div>
        </form>
    </div>
}
