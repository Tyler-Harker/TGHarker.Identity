@page "/Tenant/{tenantId}/ResetPassword"
@model TGharker.Identity.Web.Pages.Tenant.ResetPasswordModel
@{
    ViewData["Title"] = "Reset Password";
}

@if (Model.PasswordReset)
{
    <div class="text-center">
        <i class="bi bi-check-circle text-success" style="font-size: 3rem;"></i>
        <h5 class="mt-3">Password Reset Successfully</h5>
        <p class="text-muted">
            Your password has been updated. You can now sign in with your new password.
        </p>
        <hr class="my-4" />
        <a asp-page="/Tenant/Login" asp-route-tenantId="@Model.TenantId" class="btn btn-tenant-primary">
            Sign In
        </a>
    </div>
}
else
{
    <p class="text-muted small mb-4">
        Enter your new password below.
    </p>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>@Model.ErrorMessage
        </div>
    }

    @if (string.IsNullOrEmpty(Model.Token) || string.IsNullOrEmpty(Model.Email))
    {
        <div class="text-center">
            <p class="text-muted">This reset link is invalid.</p>
            <a asp-page="/Tenant/ForgotPassword" asp-route-tenantId="@Model.TenantId" class="btn btn-tenant-primary">
                Request New Link
            </a>
        </div>
    }
    else
    {
        <form method="post">
            <input type="hidden" asp-for="TenantId" />
            <input type="hidden" asp-for="Token" />
            <input type="hidden" asp-for="Email" />

            <div class="mb-3">
                <label asp-for="Input.Password" class="form-label">New Password</label>
                <input asp-for="Input.Password" class="form-control" type="password" autocomplete="new-password" autofocus />
                <span asp-validation-for="Input.Password" class="text-danger small"></span>
                <div class="form-text">At least 12 characters with uppercase, lowercase, number, and special character.</div>
            </div>

            <div class="mb-3">
                <label asp-for="Input.ConfirmPassword" class="form-label">Confirm Password</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" type="password" autocomplete="new-password" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
            </div>

            <div class="d-grid mb-3">
                <button type="submit" class="btn btn-tenant-primary btn-lg">Reset Password</button>
            </div>
        </form>
    }
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
