@page
@model TGharker.Identity.Web.Pages.Tenants.IndexModel
@{
    ViewData["Title"] = "Your Tenants";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow">
            <div class="card-body p-4">
                <h2 class="card-title text-center mb-4">Your Tenants</h2>

                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="alert alert-danger" role="alert">
                        @Model.ErrorMessage
                    </div>
                }

                @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                {
                    <div class="alert alert-success" role="alert">
                        @Model.SuccessMessage
                    </div>
                }

                @if (Model.Tenants.Count > 0)
                {
                    <p class="text-muted mb-3">Select a tenant to continue:</p>
                    <div class="list-group mb-4">
                        @foreach (var tenant in Model.Tenants)
                        {
                            <form method="post" asp-page-handler="Select" class="d-inline">
                                <input type="hidden" name="tenantId" value="@tenant.Id" />
                                <input type="hidden" asp-for="ReturnUrl" />
                                <button type="submit" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center w-100 text-start">
                                    <div>
                                        <h6 class="mb-1">@(tenant.DisplayName ?? tenant.Name)</h6>
                                        <small class="text-muted">@tenant.Identifier</small>
                                    </div>
                                    <span class="badge bg-primary">Select</span>
                                </button>
                            </form>
                        }
                    </div>

                    @if (Model.TotalPages > 1)
                    {
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <small class="text-muted">Showing @Model.Tenants.Count of @Model.TotalCount tenants</small>
                            <nav>
                                <ul class="pagination pagination-sm mb-0">
                                    <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                                        <a class="page-link" asp-page="./Index" asp-route-pageNumber="@(Model.PageNumber - 1)" asp-route-returnUrl="@Model.ReturnUrl">Previous</a>
                                    </li>
                                    @for (var i = 1; i <= Model.TotalPages; i++)
                                    {
                                        <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                            <a class="page-link" asp-page="./Index" asp-route-pageNumber="@i" asp-route-returnUrl="@Model.ReturnUrl">@i</a>
                                        </li>
                                    }
                                    <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                                        <a class="page-link" asp-page="./Index" asp-route-pageNumber="@(Model.PageNumber + 1)" asp-route-returnUrl="@Model.ReturnUrl">Next</a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    }

                    <hr class="my-4" />
                    <div class="d-grid">
                        <a asp-page="./Create" class="btn btn-success">
                            <i class="bi bi-plus-lg me-1"></i> Create New Tenant
                        </a>
                    </div>
                }
                else
                {
                    <div class="alert alert-info" role="alert">
                        <h5 class="alert-heading">Welcome!</h5>
                        <p class="mb-0">You're not a member of any tenant yet. Create one to get started.</p>
                    </div>
                    <div class="d-grid">
                        <a asp-page="./Create" class="btn btn-success btn-lg">
                            <i class="bi bi-plus-lg me-1"></i> Create Your First Tenant
                        </a>
                    </div>
                }

                <hr class="my-4" />

                <div class="text-center">
                    <a asp-page="/Account/Logout">Sign Out</a>
                </div>
            </div>
        </div>
    </div>
</div>

